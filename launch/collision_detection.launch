<?xml version="1.0"?>

<launch>

  <arg name="sensor_id" default="cam1" />

  <node pkg="vision_utils_ros" type="vision_utils_ros_node" respawn="false" name="vision_utils_ros_node" output="screen">
    <remap from="~/camera" to="/cam3d/rgb/image_raw"/>
    <param name="sensor_id" type="string" value="$(arg sensor_id)"/>
    <param name="gui" type="bool" value="true"/>
  </node>
</launch>
